<UserControl x:Class="PointOfSale.GyroCustomizationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="825" d:DesignWidth="1100">
    <UserControl.Resources>
        <Style TargetType="RadioButton">
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform CenterX="0" CenterY="0" ScaleX="2" ScaleY="2"/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform CenterX="0" CenterY="0" ScaleX="2" ScaleY="2"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180*"/>
            <ColumnDefinition Width="180*"/>
            <ColumnDefinition Width="180*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="120*"/>
            <RowDefinition Height="120*"/>
            <RowDefinition Height="120*"/>
            <RowDefinition Height="120*"/>
            <RowDefinition Height="120*"/>
            <RowDefinition Height="120*"/>
            <RowDefinition Height="120*"/>
        </Grid.RowDefinitions>
        <Label Content="Customize _____ Gyro" FontSize="50" Grid.ColumnSpan="3" HorizontalAlignment="Center"/>
        <Label Content="Doner Meat" FontSize="25" Grid.Row ="1" Grid.Column="0" Margin="25,5,10,10"/>
        <RadioButton Content="Beef" Name="beefButton" FontSize="15" Grid.Row ="1" Grid.Column="0" Margin="25,70,10,10"/>
        <RadioButton Content="Pork" Name="porkButton" FontSize="15" Grid.Row ="2" Grid.Column="0" Margin="25,70,10,10"/>
        <RadioButton Content="Chicken" Name="chickenButton" FontSize="15" Grid.Row ="3" Grid.Column="0" Margin="25,70,10,10"/>
        <RadioButton Content="Lamb" Name="lambButton" FontSize="15" Grid.Row ="4" Grid.Column="0" Margin="25,70,10,10"/>
        <CheckBox Content="Pita" Name="pitaButton" FontSize="15" Grid.Row ="1" Grid.Column="1" Margin="25,70,10,10"/>
        <CheckBox Content="Tomato" Name="tomatoButton" FontSize="15" Grid.Row ="2" Grid.Column="1" Margin="25,70,10,10"/>
        <CheckBox Content="Peppers" Name="peppersButton" FontSize="15" Grid.Row ="3" Grid.Column="1" Margin="25,70,10,10"/>
        <CheckBox Content="Onion" Name="onionButton" FontSize="15" Grid.Row ="4" Grid.Column="1" Margin="25,70,10,10"/>
        <CheckBox Content="Lettuce" Name="lettuceButton" FontSize="15" Grid.Row ="5" Grid.Column="1" Margin="25,70,10,10"/>
        <CheckBox Content="Eggplant" Name="eggplantButton" FontSize="15" Grid.Row ="6" Grid.Column="1" Margin="25,70,10,10"/>
        <CheckBox Content="Tzatziki" Name="tzatzikiButton" FontSize="15" Grid.Row ="1" Grid.Column="2" Margin="25,70,10,10"/>
        <CheckBox Content="Mint Chutney" Name="mintChutneyButton" FontSize="15" Grid.Row ="2" Grid.Column="2" Margin="25,70,10,10"/>
        <CheckBox Content="Wing Sauce" Name="wingSauceButton" FontSize="15" Grid.Row ="3" Grid.Column="2" Margin="25,70,10,10"/>
    </Grid>
</UserControl>

<UserControl x:Class="PointOfSale.MenuItemSelectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="110*"/>
            <RowDefinition Height="110*"/>
            <RowDefinition Height="110*"/>
            <RowDefinition Height="110*"/>
            <RowDefinition Height="110*"/>
        </Grid.RowDefinitions>
        <Label Content ="Entrees" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" FontSize="25"/>
        <Button Content="Virgo Classic Gyro" FontSize ="30" Grid.Column="0" Grid.Row="1"/>
        <Button Content="Leo Lamb Gyro" FontSize ="30" Grid.Column="0" Grid.Row="2"/>
        <Button Content="Scorpio Spicy Gyro" FontSize ="30" Grid.Column="0" Grid.Row="3"/>
        <Button Content="Pisces Fish Dish" FontSize ="30" Grid.Column="0" Grid.Row="4"/>

        <Label Content ="Sides" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" FontSize="25"/>
        <Button Content="Taurus Tabouleh" FontSize ="30" Grid.Column="1" Grid.Row="1"/>
        <Button Content="Gemini Stuffed Grape Leaves" FontSize ="25" Grid.Column="1" Grid.Row="2"/>
        <Button Content="Sagittarius Greek Salad" FontSize ="30" Grid.Column="1" Grid.Row="3"/>
        <Button Content="Aries Fries" FontSize ="30" Grid.Column="1" Grid.Row="4"/>

        <Label Content ="Drinks" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center" FontSize="25"/>
        <Button Content="Libra Libation" FontSize ="30" Grid.Column="2" Grid.Row="1"/>
        <Button Content="Capricorn Mountain Tea" FontSize ="30" Grid.Column="2" Grid.Row="2"/>
        
        <Label Content ="Treats" Grid.Row="3" Grid.Column="2" HorizontalAlignment="Center" FontSize="25" Margin="0,30,0,0"/>
        <Button Content="Aquarius Ice" FontSize ="30" Grid.Column="2" Grid.Row="4"/>
        <Button Content="Cancer Halva Cake" FontSize ="30" Grid.Column="2" Grid.Row="5"/>
        
    </Grid>
</UserControl>

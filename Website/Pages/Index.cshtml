                    <li>
                        <p class="itemName">
                            @drink.Name
                        </p>
                        <p class="itemDescription">
                            @drink.Description
                        </p>
                        <p class="itemPrice">
                            $@drink.Price
                        </p>
                        <p class="itemCalories">
                            @drink.Calories
                        </p>

                    </li>
                }
            </ul>
        </div>
    </div>

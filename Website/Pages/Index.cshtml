@page
@model IndexModel
@{
    ViewData["Title"] = "Gyroscope Menu";
}

@using GyroScope.Data;
@using GyroScope.Data.Enums;
@using GyroScope.Data.Drinks;

<form id="menu">
    <div id="filters">
        <input type="text" name="SearchTerms" value="@Model.SearchTerms" />
        <input type="submit" value="Search">

        <h4>Entree</h4>
        @foreach (IMenuItem entree in Menu.Entrees)
        {
            <label>
                <input type="checkbox" name="entrees" value="@entree" checked="@Model.Entrees.Contains(entree)" />
                @entree
            </label>
        }

        <h4>Side</h4>
        @foreach (IMenuItem side in Menu.Sides)
        {
            <label>
                <input type="checkbox" name="entrees" value="@side" checked="@Model.Sides.Contains(side)" />
                @side
            </label>
        }

        <h4>Drink</h4>
        @foreach (IMenuItem drink in Menu.Drinks)
        {
            <label>
                <input type="checkbox" name="entrees" value="@drink" checked="@Model.Drinks.Contains(drink)" />
                @drink
            </label>
        }

        <h4>Calories    </h4>
        Between
        <input name="CaloriesMin" type="number" min="0" max="10" step="0.1" placeholder="min" value="@Model.CalorieMin" />
        and
        <input name="PriceMax" type="number" min="0" max="10" step="0.1" placeholder="max" value="@Model.CalorieMax" />

        <h4>Price    </h4>
        Between
        <input name="PricesMin" type="number" min="0" max="10" step="0.1" placeholder="min" value="@Model.PriceMin" />
        and
        <input name="PriceMax" type="number" min="0" max="10" step="0.1" placeholder="max" value="@Model.PriceMax" />

    </div>
</form>

    <h1 class="display-4">Gyro Scope</h1>
    <p>When the planets align!</p>

    <div class="text-center">
        <div id="entrees" class="allEntrees">
            <h2 class="Entrees">
                Entrees
            </h2>
            <hr style="border-top-color: white;" />
            <ul>
                @foreach (IMenuItem entree in @Model.Entrees)
                {
                    <li>
                        <p class="itemName">
                            @entree.Name
                        </p>
                        <p class="itemDescription">
                            @entree.Description
                        </p>
                        <p class="itemPrice">
                            $@entree.Price
                        </p>
                        <p class="itemCalories">
                            @entree.Calories
                        </p>
                    </li>
                }
            </ul>

        </div>

        <div id="sides" class="allSides">
            <h3 class="Sides">
